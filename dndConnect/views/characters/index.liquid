{% layout 'layout.liquid' %}
{% block content %}
<div>
    <h2>Character Index</h2>
    
    {% for race in races %}
    <div class="card" style="width: 18rem">
        <h5 class="card-header">{{character.name}}</h5>
        <div class="card-body">
            <p class="card-text">
                {{race.name}}
            </p>
            <a href="/characters/{{character._id}}" class="btn">View {{character.name}}</a>
        </div>
        <a href="/characters/new" class="btn">Create A New Character</a>
    </div>
{% endfor %}
</div>
{% endblock %}