{% layout 'layout.liquid' %}
{% block content %}
<div>
    <h2>Character Details</h2>
    <div class="container-md">
        <article>
            <div class="card" style="width: 100rem">
                <h5 class="card-header">{{character.name}}</h5>
                <div class="card-body">
                    <p class="card-text">
                        {{character.race}}
                    </p>
                    <p class="card-text">
                        {{character.class}}
                    </p>
                    <p class="card-text">
                        {{character.level}}
                    </p>
                    <a href="/characters" class="btn">Back to Home</a>
                </div>
        </article>
    </div>
</div>
{% endblock %}